@model IEnumerable<ApplicationFormApp.Models.ApplicationForm>

<div class="container mt-4">

    <h2 class="mb-4">Submitted Applications</h2>

    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>DOB</th>
                    <th>Degree</th>
                    <th>Branch</th>
                    <th>Country</th>
                    <th>State</th>
                    <th>City</th>
                    <th>Pincode</th>
                    <th style="width:160px;">Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.CountryCode @item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.Gender</td>
                        <td>@item.DOB.ToShortDateString()</td>
                        <td>@item.Degree</td>
                        <td>@item.Branch</td>
                        <td>@item.Country</td>
                        <td>@item.State</td>
                        <td>@item.City</td>
                        <td>@item.Pincode</td>

                        <td>
                            <a asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-theme me-2">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-theme">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn btn-theme">
            Back to Form
        </a>
    </div>

</div>
